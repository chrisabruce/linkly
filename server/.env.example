# Linkly Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -------------------------------------------------------
# REQUIRED
# -------------------------------------------------------

# Admin password for the web interface
ADMIN_PASSWORD=changeme

# -------------------------------------------------------
# DATABASE
# -------------------------------------------------------

# SQLite database file path
DATABASE_URL=sqlite:./linkly.db

# -------------------------------------------------------
# SERVER
# -------------------------------------------------------

# Host to bind to (0.0.0.0 listens on all interfaces)
HOST=0.0.0.0

# Port to listen on
PORT=3000

# Public base URL (used to generate short links â€” no trailing slash)
BASE_URL=http://localhost:3000

# -------------------------------------------------------
# SESSIONS
# -------------------------------------------------------

# How long admin sessions last (in hours)
SESSION_DURATION_HOURS=24

# -------------------------------------------------------
# LOGGING
# -------------------------------------------------------

# Log level: error | warn | info | debug | trace
RUST_LOG=linkly=info,tower_http=info
